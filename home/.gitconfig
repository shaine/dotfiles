[user]
	name = Shaine Hatch
	email = shaine@squidtree.com
[core]
    whitespace = trailing-space,space-before-tab
    editor = nvim
    excludesfile = ~/.gitignore_global
	repositoryformatversion = 0
	fileMode = false
	bare = false
	logallrefupdates = true
	ignorecase = true
	precomposeunicode = true
[color]
    ui = auto
[merge]
    stat = true
    tool = opendiff
	conflictstyle = diff3
[alias]
    ocd = !git gc --aggressive && git prune && git remote prune origin && git cleanup
    cleanup = !git branch --merged | grep -v \"\\*\" | xargs -n 1 git branch -d
    st = status -sb
    d = diff --word-diff
    co = checkout
    com = commit -am
    ignore = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(blue)<%an>%Creset' --
    branch-lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    ll = log --stat --abbrev-commit
    update = submodule foreach git pull
    alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\ => \\2/' | sort
    uncommit = reset --soft HEAD^
    yolo = !git reset HEAD --hard && git clean -f
    sm = !git stash && git checkout master && git fetch origin master && git reset --hard origin/master && git ocd
[github]
    user = shaine
[url "https://"]
	insteadOf = git://
[push]
	default = current
[url "https://github.com/"]
	insteadOf = git://github.com/
[diff]
    compactionHeuristic = true
[commit]
    template = ~/.gitmessage
[include]
	path = ~/.gitconfig.local
